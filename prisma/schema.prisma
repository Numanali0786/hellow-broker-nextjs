generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or mysql/sqlite
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  name      String?
  address   String?
  title     String?
  role      Role     @default(USER) // "ADMIN" or "USER"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  properties Property[] // User's own listings
  favorites  Favorite[] // Listings user has favorited
  reports    Report[] // Listings user has reported
}

// 14+3
model Property {
  id        String   @id @default(cuid())
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  title String
  type  PropertyType

  stateId         String
  cityId          String
  location        String // User enters manually
  city            City            @relation(fields: [cityId], references: [id])
  state           State           @relation(fields: [stateId], references: [id])
  // rooms           Int // sqft or sq meters
  price           Int
  listingCategory ListingCategory // ðŸ”¥ Buy | Rent | 
  facing          String
  description     String?
  bedrooms        Int
  bathrooms       Int
  area            Int // sqft or sq meters
  age             String

  // ðŸ’¥ Admin control related fields
  isFeatured     Boolean    @default(false)
  isHandpicked   Boolean    @default(false)
  isRecommended  Boolean    @default(false)
  isPopular      Boolean    @default(false)
  isReported     Boolean    @default(false)
  isBoosted      Boolean    @default(false)
  reportReason   String? // optional text if reported
  views          Int        @default(0) // for popularity
  favoritesCount Int        @default(0) // for tracking likes
  Favorite       Favorite[]
  Report         Report[]
  media          Media[]
}

enum PropertyType {
  APARTMENT
  HOUSE
  VILLA
  STUDIO
  LAND
  FLOOR
  COMMERCIAL
}

enum ListingCategory {
  BUY
  RENT
}

// ADMIN can access and operate anything
// USER can see properties and add new properties/listing
// Both logged in if not can only see properties
enum Role {
  USER
  ADMIN
}

model Favorite {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id])
  createdAt  DateTime @default(now())
}

model Report {
  id         String   @id @default(cuid())
  reason     String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  property   Property @relation(fields: [propertyId], references: [id])
  propertyId String
  createdAt  DateTime @default(now())
}

model Media {
  id         String   @id @default(cuid())
  publicId   String
  url        String
  type       String // "image" or "video"
  format     String?
  width      Int?
  height     Int?
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id])
  propertyId String
}

model State {
  id       String     @id @default(cuid())
  name     String
  cities   City[]
  Property Property[]
}

model City {
  id       String     @id @default(cuid())
  name     String
  stateId  String
  state    State      @relation(fields: [stateId], references: [id])
  Property Property[]
}
